# Maintainer:  Xiaoxiao <i@xiaoxiao.im>

pkgname=muon-git
pkgver=r
pkgrel=1
pkgdesc="A fast, obscured stateless VPN"
arch=('i686' 'x86_64')
url="https://github.com/XiaoxiaoPu/muon"
license=('GPL3')
depends=('libmill' 'iproute2')
makedepends=('git')
provides=('muon')
source=("git+https://github.com/XiaoxiaoPu/muon.git")
sha256sums=('SKIP')

pkgver() {
	cd "${srcdir}/muon"
	echo "r$(git rev-list --count HEAD)"
}

build() {
	cd "${srcdir}/muon"
	autoreconf -if
	./configure --prefix=/usr --sysconfdir=/etc
	make
}

package() {
	cd "${srcdir}/muon"
	make DESTDIR="${pkgdir}/" install
}
